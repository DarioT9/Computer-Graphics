#version 450#extension GL_ARB_separate_shader_objects : enable// Input variable received from the Vertex Shader// The location must match the output variable of the vertex shaderlayout(location = 0) in vec2 fragUV; // UV coordinates for texturing// Output color computed by this fragment shader// Usually, location 0 is used for the primary color outputlayout(location = 0) out vec4 outColor;// Texture sampler bound to set 0, binding 1layout(set = 0, binding = 1) uniform sampler2D tex;// Main fragment shader// This shader simply samples the texture color and outputs it without any shadingvoid main() {	vec3 Emit = texture(tex, fragUV).rgb; // Sample the texture using UV coordinates	outColor = vec4(Emit, 1.0f); // Output the sampled color with full opacity}